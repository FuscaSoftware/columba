/**
 * A class for visualising the output of the system
 * @author aoliveiracruz
 *
 */

public class ShowOutput {
	public int i = 0;
	
	public ShowOutput (int a, int b) {
		add(a ,b);
		subtract(a ,b);
	}

	/**
	 * @param args
	 */
	
	public int add ( int a, int b) {
		i = a + b;
		i++;
	}
	
	public int subtract (int a, int b) {
		i = (a - b);
		
		if ( i < 0) System.out.println("Negative result");
		else System.out.println(i);
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		ShowOutput show = new ShowOutput(2,4);


	}

}
